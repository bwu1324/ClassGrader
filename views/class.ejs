<!DOCTYPE html>
<html lang="en">

<head>
    <title>Class Grader - <%- data.className %> at <%- data.school %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="../class/class.js"></script>

    <link rel="stylesheet" href="../class/class.css">
    <link rel="stylesheet" href="../global/global.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
</head>

<body>
    <!-- Header -->
    <div id="nav-container">
        <nav id="nav-bar">
            <a href="/index"><img id="nav-logo" src="../global/logo.png"></a>

            <a class="nav-element1" href="/index">
                Home
            </a>
            <a class="nav-element1" href="/index/#about">
                About Us
            </a>
            <a class="nav-element1" href="/findClasses/">
                Search Classes
            </a>

            <a class="nav-element3" href="/signup">
                Signup
            </a>
            <a class="nav-element2" href="/login">
                Login
            </a>
        </nav>
    </div>

    <div id="page-container">
        <div id="page-content">
            <div class="class-container">
                <p class="this-class-name">
                    <%- data.className %>
                </p>
                <p class="school">at <%- data.school %>
                </p>
                <p class="teacher">Teacher: <%- data.teacher %>
                </p>

                <div id="average-rating-container">
                    <p class="rating-label">Average Rating: </p>
                    <div class="rating">
                        <% for (let j=5; j> 0; j--) { %>
                            <% if (j <=data.rating) { %>
                                <div class="rating-bar-dark"></div>
                                <% } else { %>
                                    <div class="rating-bar-light"></div>
                                    <% } %>
                                        <% } %>
                    </div>
                </div>
            </div>
            <hr>

            <% for (let i=ratings.length - 1; i>= 0; i--) { %>
                <div class="rating-card">
                    <div class="rating-header">
                        <a href="/profile/<%- ratings[i].user %>" class="user"><%-ratings[i].user%>'s Review</a>
                        <p class="date">
                            <%-ratings[i].date%>
                        </p>
                    </div>

                    <div class="ratings">
                        <div class="rating-container">
                            <p class="rating-label">Overall: </p>
                            <div class="rating">
                                <% for (let j=5; j> 0; j--) { %>
                                    <% if (j <=ratings[i].overallRating) { %>
                                        <div class="rating-bar-dark"></div>
                                        <% } else { %>
                                            <div class="rating-bar-light"></div>
                                            <% } %>
                                                <% } %>
                            </div>
                        </div>

                        <div class="rating-container">
                            <p class="rating-label">Content: </p>
                            <div class="rating">
                                <% for (let j=5; j> 0; j--) { %>
                                    <% if (j <=ratings[i].contentRating) { %>
                                        <div class="rating-bar-dark"></div>
                                        <% } else { %>
                                            <div class="rating-bar-light"></div>
                                            <% } %>
                                                <% } %>
                            </div>
                        </div>

                        <div class="rating-container">
                            <p class="rating-label">Homework: </p>
                            <div class="rating">
                                <% for (let j=5; j> 0; j--) { %>
                                    <% if (j <=ratings[i].homeworkRating) { %>
                                        <div class="rating-bar-dark"></div>
                                        <% } else { %>
                                            <div class="rating-bar-light"></div>
                                            <% } %>
                                                <% } %>
                            </div>
                        </div>

                        <div class="rating-container">
                            <p class="rating-label">Teacher: </p>
                            <div class="rating">
                                <% for (let j=5; j> 0; j--) { %>
                                    <% if (j <=ratings[i].teacherRating) { %>
                                        <div class="rating-bar-dark"></div>
                                        <% } else { %>
                                            <div class="rating-bar-light"></div>
                                            <% } %>
                                                <% } %>
                            </div>
                        </div>
                    </div>

                    <p class="review">
                        <%-ratings[i].review%>
                    </p>
                </div>
                <% }; %>
        </div>

        <!-- Footer -->
        <footer id="footer">
            <div id="footer-container">
                <div id="site-index">
                    <h5>Class Grader Site Index</h5>

                    <a href="/index">Home</a><br>
                    <a href="/signup">Sign Up</a><br>
                    <a href="/login"">Login</a><br>
            <a href=" /profile">Profile</a><br>
                    <a href="/findClasses">Find Class</a><br>
                    <a href="/newClass">New Class</a><br>
                </div>

                <div id="contact">
                    <h5>Contact</h5>

                    <a>Email: someone@someplace.com</a>
                    <p>Phone: 1-(800)-123-4567</p>
                </div>
            </div>
        </footer>
    </div>
</body>

</html>